<p>Currently chat in <strong><%= @room_id %></strong> as <strong><%= @username %></strong></strong></p>

<div id="chat-container">
  <div id="chat-messages" phx-update="append">
    <%= for message <- @messages do %>
     <%= display_message(message) %>
    <% end %>
  </div>
  <div id="user-list">
    <h3>Online Users</h3>
    <%= for user <- @user_list do %>
      <p><%= user %></p>
    <% end %>
  </div>
</div>

<%= f = form_for :chatbox, "#", id: "chat-form", phx_submit: :submit_message, phx_change: :form_update %>
  <%= text_input f, :message, value: @message, placeholder: "Enter message" %>
</form>
